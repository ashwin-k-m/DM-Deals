<section class="container text-center col-12" style="padding-top: 5rem;">
    <a href="/admin/addproduct" class="btn btn-secondary mt-3">Add new item</a>
    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">name</th>
                <th scope="col">category</th>
                <th scope="col">price</th>
                <th scope="col">image</th>
                <th scope="col">image 2</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.Name}}</td>
                <td>{{this.Category}}</td>
                <td>{{this.Price}}</td>
                <td><img src="{{this.Link}}" class="image0-fluid" style="max-height: 40px; max-width: 80px;"></td>
                <td><img src="/product-images/{{this._id}}.jpg" class="image0-fluid"
                        style="max-height: 40px; max-width: 80px;"></td>
                <td><a href="/admin/edit-product" class="btn btn-info">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}} from database')">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>